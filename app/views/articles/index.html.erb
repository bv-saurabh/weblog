<h1>Listing Articles</h1>

<%= link_to 'New article', '/articles/new' %>

<p>
	<% flash.each do |name, msg| %>
		<strong><%= content_tag :div, msg, class: name %></strong>
	<% end %>
</p>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
	</tr>
	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title  %></td>
			<td><%= article.body %></td>
			<td><%= link_to 'Show', article_path(article) %></td>
			<td><%= link_to 'Edit', edit_article_path(article) %></td>
			<td><%= link_to 'Destroy', article_path(article), method: :delete, 
			data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>

<p>
	<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
</p>

<p>
	Existing User? <%= link_to 'Login', new_user_session_path %>
</p>

<p>
	New User? <%= link_to 'Signup', new_user_registration_path %>
</p>
